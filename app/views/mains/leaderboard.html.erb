<h4 class="list-item text-center text-muted">LeaderBoard:</h4></li>
<div class="container index_content_container">
  <div class="row justify-content-center full_leader_board mt-1">
    <ul class="list">
      <%@characters.each_with_index do |character,index| %>
        <li class="list-inline-item" style="width:40px"><%= index + 1  %></li>
        <li class="list-inline-item" style="width:280px">Name: <%= character.name %></li>
        <li class="list-inline-item" style="width:110px">Age: <%= character.age %></li>
        <li class="list-inline-item" style="width:110px">Status: <%= character.status %></li>
        <li class="list-inline-item mx-auto img-fluid small_arrow">
          <% if current_user %>
            <%= link_to 'Go', character_info_path(character.id, {extra: 'from_index'}), class: 'btn btn-outline-secondary mb-1'%>
          <% else %>
            <%= link_to 'Go', main_path(character.id, {extra: 'from_leaderboard'}), class: 'btn btn-outline-secondary mb-1'%>
          <% end %>
        </li>
        </br>
      <% end %>
    </ul>
  </div>
</div>
</div>

<section class="content-section text-muted text-center mt-1">

  <div class="container text-center">
    <div class="row mt-5">

      <div class="col-lg-5 col-md-7"></div>

      <div class="col-lg-2 col-md-7">
        <div class="action_arrow">
          <%= link_to 'Back', mains_path({extra: 'from_leaderboard'}), class: 'btn btn-outline-secondary'%>
<!--          <p><%#= link_to image_tag('menu/icons8-backward-50.png'), mains_path %></p>-->
        </div>
        <p class="list-inline-item small text-dark">Characters Page</p>
      </div>

      <div class="col-lg-5 col-md-7"></div>

    </div>
  </div>
</section>