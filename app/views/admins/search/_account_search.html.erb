<h4 class="list-item text-center text-muted mt-4">Search - Account Results</h4></li>

<div class="container mt-4">
  <div class="form-row">
    <div class="row justify-content-center account_management_index mb-1 mt-5">
      <% if @users.first.include?("id") %>
        <ul class="list-inline"><% @users.each do |user| %>
            <li class="list-inline-item mb-3" style="width:50px">Id: <%= user['id'] %></li>
            <li class="list-inline-item mb-3" style="width:320px">Email: <%= user['email'] %></li>
            <li class="list-inline-item mb-3" style="width:230px">Name:<%= user['name'] %></li>
            <li class="list-inline-item mb-3" style="width:180px">User since:<%= user['created_at'].strftime("%F") %></li>
            <li class="list-inline-item mb-3" style="width:100px">Role:<%= user['role'] %></li>
            <li class="list-inline-item mb-3" style="width:85px">Active:<%= user['has_character'] %></li>
            <li class="list-inline-item mb-3" >
              <% if is_the_user_admin_api?(user) %>
                <%= link_to 'Show', edit_user_path(user['id']), class: 'btn btn-outline-secondary' %></li>
              <% else %>
                <%= link_to 'Edit', edit_user_path(user['id']), class: 'btn btn-outline-secondary' %></li>
              <% end %>
              </br>
          <% end %>
      <% else %>
        <h4 class="text-muted text-center mt-5">No Record found</h4>
      <% end %>
      </ul>

    </div>
  </div>
</div>

<div class="spacer_1">
</div>

<%= render 'shared/admin/back_for_account_search' %>