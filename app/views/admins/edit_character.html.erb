<h4 class="list-item text-center text-muted mt-4">Admin -  Edit Character</h4></li>

<div >
  <%= form_for @character, :url => { :action => "character_update_by_admin" } do |f| %>
    <div class="container mt-4">
      <div class="character_management_index">
        <div class="form-row">
          <div class="col-3"></div>
          <div class="col-6">

            <div class="form-group">

              <div class="form-group">
                <%= f.hidden_field :id, class:"form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class:"form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :age %>
                <%= f.text_field :age, class:"form-control", :disabled=>true %>
              </div>

              <div class="form-group">
                <% if alive_check(@character) == true%>
                  <%= f.label :status %>
                  <%= f.text_field :status, class:"form-control" %>
                  <div class="inline-group">
                    <%= f.label :happiness %>
                    <%= f.text_field :happiness, class:"form-control" %>
                    <%= f.label :fed_state %>
                    <%= f.text_field :fed_state, class:"form-control" %>
                    <%= f.label :activty %>
                    <%= f.text_field :activity_require_level, class:"form-control" %>
                  </div>
                <% else %>
                  <%= f.text_field :status, class:"form-control", :disabled=>true %>
                  <h6 class="text-muted mt-2">Died: <%= @character.died_on.strftime("%F") %></h6>
                <% end %>
              </div>

              <div class="form-group">
                  <%= f.label :owner %>
                  <%= f.text_field :owner_of_character, class:"form-control", :disabled=>true %>
              </div>

              <div class="form-group">
                <% if alive_check(@character) == true%>
                  <%= f.label :hibernated %>
                  <%= f.text_field :hibernated, class:"form-control" %>
                <% end %>
              </div>

            </div>
            <div class="col-3"></div>
          </div>
        </div>
      </div>
      </br>
      <div class="form-group text-center">
        <%= f.submit 'Save Character Details', class: 'btn btn-outline-secondary' %>
      </div>
  <% end %>
  </div>

