<p class="float-right small"><%= @message %></p>
<h2>Current user_id: <%= current_user.id %></h2>
<h2>Your characters history</h2>
<br class="list-inline"><% @characters.each do |character| %>
  <li class="list-inline-item">Name of Character: <%= character.name %></li>
  <li class="list-inline-item">Age Of Character: <%= character.age %></li>
  <li class="list-inline-item">Status:<%= character.status %></li>
  <% if character.status == 'alive' %>
    <%= link_to 'Manage Character', character_path(character.id, {extra: 'from_all_of_my_character'}) %>
  <% else %>
    <li class="list-inline-item">This Character has died on: <%= date_view_optimizer(character.updated_at) %></li>
    <li class="list-inline-item">Was living:  <%= life_length_counter(character) %></li>
  <% end %>
  </br>
<% end %>
</br>
<p><%= link_to 'Back to the Characters Page ', characters_path %></p>
</ul>

