</br>

<h4 class="text-center text-muted mt-5">Sign up</h4>

<div class="container index_content_container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row justify-content-center">

      <div class="form-group">
        <h6 class="text-center text-muted">Username</h6>
        <div class="field">
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>

        <h6 class="text-center text-muted mt-2">Email</h6>
        <div class="field">
          <%= f.email_field :email,class: 'form-control'%>
        </div>

        <h6 class="text-center text-muted mt-2">Password</h6>
        <div class="field">
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <h6 class="text-center text-muted mt-2">Password Confirmation</h6>
        <div class="field">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="spacer_1"></div>
        </br>

        <div class="action_arrow">
          <p><%= f.submit "Sign up", class: 'btn btn-outline-secondary btn-block' %></p>
        </div>
        <p class="text-center small text-dark">Sign up</p>

      </div>
  <% end %>

  </div>
  <div class="text-right" style="margin-top:-110px ">
    <%= render "devise/shared/links" %>
  </div>
</div>


