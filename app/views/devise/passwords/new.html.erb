<h4 class="text-center text-muted mt-5">Forgot your password?</h4>
<div class="container index_content_container">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row justify-content-center">

      <div class="form-group">

        <h6 class="text-center text-muted">Email</h6>
        <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="spacer_3_5"></div>



      <div class="actions" style="margin-top: -10px">
        <p><%= f.submit "Send Me", class: 'btn btn-outline-secondary btn-block' %></p>
      </div>
      <p class="text-center small text-dark">Send me reset password instructions</p>
  <% end %>
  </div>
</div>





<div class="text-right" style="margin-top:-110px ">
  <%= render "devise/shared/links" %>
</div>
</div>