<!DOCTYPE html>
<html>
<head>
  <title>Dragon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <%= render 'shared/nav_for_users' %>
<% else %>
  <%= render 'shared/nav_for_guests' %>
<% end %>

<% flash.each do |key, message| %>
  <div class="text-center alert alert-<%= message_manager(key) %>">
    <%= message %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
